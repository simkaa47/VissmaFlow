<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VissmaFlow.View.UserControls.Keyboard.CoporateWindow"
        Title="CoporateWindow"
		CanResize="False"
		xmlns:mat="using:Material.Icons.Avalonia"
		HasSystemDecorations="False"
		TransparencyLevelHint="AcrylicBlur"
      ExtendClientAreaToDecorationsHint="True"
      Background="Red"		
	  Topmost="True"      
      WindowStartupLocation="Manual"
	  VerticalAlignment="Bottom">
	<Panel>
		
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
				  BackgroundSource="Digger"
				  TintOpacity="1"
				  TintColor="LightGray"
				  MaterialOpacity="0.65" />
			</ExperimentalAcrylicBorder.Material>
			
		</ExperimentalAcrylicBorder>
		<Panel Margin="0,30,0,10">
			<Viewbox>
				<ContentPresenter Content="{Binding Path=CoporateContent}"/>
			</Viewbox>
			
		</Panel>
		<Button Height="30" Width="30"
					VerticalAlignment="Top"
					Click="CloseWindow"
					HorizontalAlignment="Right">
			<mat:MaterialIcon Kind="Close" Height="25" Width="25"/>
		</Button>
	</Panel>
</Window>
