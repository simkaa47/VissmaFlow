<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:VissmaFlow.Core.ViewModels"
			 xmlns:mat="using:Material.Icons.Avalonia"
			 x:DataType="vm:MainViewModel"
             x:Class="VissmaFlow.View.UserControls.HighBar.ConnectIndicator">
	<StackPanel>
		<mat:MaterialIcon Width="50" Height="50" Kind="Connection" IsVisible="{Binding !CommunicationService.Connected}" Foreground="Red"/>
		<mat:MaterialIcon Width="50" Height="50" Kind="Connection" IsVisible="{Binding CommunicationService.Connected}" Foreground="GreenYellow"/>
	</StackPanel>
	
</UserControl>
