<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:VissmaFlow.Core.ViewModels"
			 x:DataType="vm:AccessViewModel"
			 xmlns:mat="using:Material.Icons.Avalonia"
             x:Class="VissmaFlow.View.UserControls.HighBar.HighBarAccessControl">
	<Border CornerRadius="4" Background="LightGray" >
		<StackPanel Orientation="Horizontal" MaxWidth="200">
			<Button Height="40" Width="40" Background="Transparent"
                    Margin="5" Click="LoginClick">
				<mat:MaterialIcon Kind="User" Foreground="Black" Height="30" Width="30"/>
			</Button>
			<TextBlock Text="{Binding CurrentUser, Converter={StaticResource UserToNameConverter}}" 
                           FontSize="11"
							Margin="5"
						   TextWrapping="Wrap"
					       Width="100"
                           VerticalAlignment="Center"/>
			<Button Height="40" Width="40"
					Background="Transparent"
                    Margin="5" Command="{Binding LogoutCommand}"
					IsVisible="{Binding CurrentUser, Converter={x:Static ObjectConverters.IsNotNull}}">				
				<mat:MaterialIcon Kind="ExitToApp" Foreground="Black" Height="30" Width="30"/>				
			</Button>
		</StackPanel>
	</Border>
</UserControl>
