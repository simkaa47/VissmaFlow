<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:VissmaFlow.Core.ViewModels"
		     x:DataType="vm:MainViewModel"
			 xmlns:par="using:VissmaFlow.View.UserControls.Parameters"
			 xmlns:adm="using:VissmaFlow.View.UserControls.Administration"
             x:Class="VissmaFlow.View.UserControls.MainTabControl">
	<Border BorderThickness="2" BorderBrush="Gray">
		<TabControl TabStripPlacement="Bottom">
			<TabItem Header="Параметры">
				<par:ParametersViewControl/>
			</TabItem>
			<TabItem Header="Администрирование" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch">
				<LayoutTransformControl>
					<LayoutTransformControl.LayoutTransform>
						<RotateTransform Angle="0"/>
					</LayoutTransformControl.LayoutTransform>
					<adm:AdministrationTabControl/>
				</LayoutTransformControl>

			</TabItem>
		</TabControl>
	</Border>

</UserControl>
