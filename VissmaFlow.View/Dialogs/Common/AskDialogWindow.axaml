<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		WindowStartupLocation="CenterOwner"
		SizeToContent="WidthAndHeight"
        x:Class="VissmaFlow.View.Dialogs.Common.AskDialogWindow"
        Title="AskDialogWindow">
	<StackPanel>
		<TextBlock Width="200" Name="Content" TextWrapping="Wrap" Margin="20"/>
		<WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,15,0,10">
			<Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0">OK</Button>
			<Button Click="Cancel_Click" MinWidth="60">Отмена</Button>
		</WrapPanel>
	</StackPanel>
</Window>
