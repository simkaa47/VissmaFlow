<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 Width="480" Height="800"
             x:Class="VissmaFlow.View.Dialogs.Common.QuestionControl">
	<Grid>
		<TextBlock  Name="Content"
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					FontSize="20"
					TextWrapping="Wrap" Margin="20"/>
		<WrapPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,15,0,20">
			<Button IsDefault="True" Click="Accept_Click" MinWidth="200" Margin="0,0,10,0">
				<TextBlock Text="ОК" Margin="15" HorizontalAlignment="Center" />
			</Button>
			<Button Click="Cancel_Click"
					VerticalAlignment=""
					MinWidth="200">
				<TextBlock Text="Отмена" Margin="15" HorizontalAlignment="Center" />
			</Button>
		</WrapPanel>
	</Grid>
</UserControl>
