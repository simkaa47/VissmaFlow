             x:Class="VissmaFlow.View.App"
			 RequestedThemeVariant="Dark">

    <Application.Styles>		
        <FluentTheme />		
		<mat:MaterialIconStyles />		
		<StyleInclude Source="/Styles/Validation/ValidationErrors.xaml"/>
		<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
		<StyleInclude Source="/Styles/TabItems.axaml"/>
		<StyleInclude Source="/Styles/ScrollBars.axaml"/>
		<StyleInclude Source="/Styles/DataGrid/DataGridHeaders.axaml"/>
