    </Application.Styles>

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Enums/EventEnums.axaml"/>
				<ResourceInclude Source="/Enums/ParameterEnums.axaml"/>
				<ResourceInclude Source="/Enums/UserEnums.axaml"/>
				<ResourceInclude Source="/Themes/ListBoxItems.axaml"/>
				<ResourceInclude Source="/Themes/TabItems.axaml"/>
				<ResourceInclude Source="/Themes/TextBoxes.axaml"/>
				<ResourceInclude Source="/Enums/CommunicationEnums.axaml"/>
				<ResourceInclude Source="/Converters/GlobalConverters.axaml"/>
